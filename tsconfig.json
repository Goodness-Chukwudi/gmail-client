{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "lib": ["es2015"]
}